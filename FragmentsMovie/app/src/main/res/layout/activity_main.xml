<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huntertsai.fragmentsmovie.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="30dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/oneOfone"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/catch_me_if_you_can"
            android:onClick="toDetail"/>

        <ImageView
            android:id="@+id/oneOftwo"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/flight_club"
            android:onClick="toDetail"/>

        <ImageView
            android:id="@+id/oneOfthree"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/forrest_gump"
            android:onClick="toDetail"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/twoOfone"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/good_will_hunting"
            android:onClick="toDetail"/>

        <ImageView
            android:id="@+id/twoOftwo"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/pulp_fiction"
            android:onClick="toDetail"/>
        <ImageView
            android:id="@+id/twoOfthree"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/the_godfather"
            android:onClick="toDetail"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/threeOfone"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/the_hangover"
            android:onClick="toDetail"/>

        <ImageView
            android:id="@+id/threeOftwo"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/the_shaw_shank_redemption"
            android:onClick="toDetail"/>

        <ImageView
            android:id="@+id/threeOfthree"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/titanic"
            android:onClick="toDetail"/>

    </LinearLayout>


    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

        <!--<fragment-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:name="com.example.huntertsai.fragmentsmovie.BlankFragment"-->
            <!--tools:layout = "@layout/fragment_blank">-->
        <!--</fragment>-->


    <!--</LinearLayout>-->




</LinearLayout>
