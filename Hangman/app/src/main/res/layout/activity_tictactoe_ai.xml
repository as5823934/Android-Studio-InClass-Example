<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fullscreen_content"
    tools:context="com.example.huntertsai.hangman.TicTacToe_AI_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tic_bg"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_btn"
            android:onClick="resetClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIC TAC TOE"
            android:textSize="25sp"/>
    <TableLayout
        android:id="@+id/Grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:keepScreenOn="true"
        android:padding="20dp">

        <TableRow
            android:id="@+id/Row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff">

            <com.hanks.htextview.HTextView
                android:id="@+id/cell_11"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true" />
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_12"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_13"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>

        </TableRow>
        <TableRow
            android:id="@+id/Row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff">

            <com.hanks.htextview.HTextView
                android:id="@+id/cell_21"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_22"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:background="@drawable/back"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:clickable="true"/>
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_23"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>

        </TableRow>
        <TableRow
            android:id="@+id/Row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#ffffff">
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_31"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_32"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>
            <com.hanks.htextview.HTextView
                android:id="@+id/cell_33"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="cellClick"
                android:background="@drawable/back"
                android:clickable="true"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4d4d4d">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/radio_ai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/radio_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player"
                android:checked="true"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
