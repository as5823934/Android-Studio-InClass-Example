<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.huntertsai.hangman.WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/game_room"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <com.hanks.htextview.HTextView
        android:id="@+id/htext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        app:animateType="typer"/>

    <Button
        android:text="TIC TAC TOE vs Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="to_Tic_tac_toe_player"/>
    <Button
        android:text="TIC TAC TOE vs Computer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="to_Tic_tac_toe_ai"/>
    <Button
        android:text="HANGMAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="to_Hangman"/>
</LinearLayout>



</LinearLayout>
